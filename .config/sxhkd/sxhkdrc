#
# wm independent hotkeys
#

# polybar hide/show
super + x
    polybar-msg cmd hide; bspc config -m focused top_padding 0
super + shift + x
#    polybar-msg cmd show; bspc config -m focused top_padding $((`bspc config -m focused top_padding` + 20 ))
	polybar-msg cmd show


# terminal emulator
super + Return
	kitty

super + shift + Return
	alacritty

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + r
	bspc wm -r

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + @space,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0,grave}
	bspc {desktop -f,node -d} '^{1-9,10,11}'

#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

#
# move/resize
#

# expand a window by moving one of its side outward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#### Applications
# Firefox
super + f
	firefox

# Thunar
super + e
	thunar

# maim
Print
	path="$HOME/Pictures/Screenshots/Temporary/$(date).png" && maim -s "$path" && xclip -selection clipboard -t image/png "$path"

shift + Print
	sleep 0.5 && path="$HOME/Pictures/Screenshots/$(date).png" && maim "$path" && xclip -selection clipboard -t image/png "$path"

super + Print
	path="$HOME/Pictures/Screenshots/$(date).png" && maim -s "$path" && xclip -selection clipboard -t image/png "$path"


### Close Stuff
super + shift + F12
	killall -q picom

super + shift + F11
	$HOME/.config/bspwm/picom/picom.sh

super + shift + F10
	killall -q Discord

super + shift + F9
	pactl set-sink-volume @DEFAULT_SINK@ 100%

super + shift + l
	$HOME/.config/i3/lock.sh

### Rofi keybinds
super + d
	rofi -show drun

### clipboard manager
super + shift + F1
	clipster -s

# run commands
super + shift + d
	rofi -show run

# Powermenu
super + shift + e
	rofi -show powermenu -modi powermenu:~/.config/rofi/rofi-power-menu

# Window Switcher
alt + Tab
	rofi -show window


### Function Keys
XF86MonBrightnessDown
	brightnessctl s 5%-

XF86MonBrightnessUp
	brightnessctl s 5%+

#XF86AudioPrev
#	playerctl previous
#
#XF86AudioNext
#	playerctl next
#
#XF86AudioPlay
#	playerctl play-pause

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86AudioPlay
	mpc toggle

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
